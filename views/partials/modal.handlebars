{{! -- Button for About}}
<button class='button is-success is-light btnHome' id='trigger3-btn'>About</button>
<div class='modal' id='modal3'>
  <div class='modal-background'></div>
  <div class='modal-content'>
    <div class='section modal-wrap'>
      <div class='field'>
        <div class ="aboutCont">
          <p class='aboutP'>
